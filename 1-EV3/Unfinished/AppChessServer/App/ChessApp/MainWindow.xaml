<Window x:Class="ChessApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="806">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Columna pequeña para los controles de la interfaz -->
            <ColumnDefinition Width="200" />
            <!-- Borde para separar las dos columnas -->
            <ColumnDefinition Width="Auto" />
            <!-- Columna más grande para el tablero -->
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <!-- Por ejemplo, un botón -->
            <Button Content="Botón" Width="200" Height="30"/>
            <!-- Otros controles aquí -->
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="3" Grid.Column="1"/>
        <Grid Grid.Column="2">
            <Grid.Background>
                <ImageBrush ImageSource="Assets/Board.png"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
